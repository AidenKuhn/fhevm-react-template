# ============================================
# NETWORK CONFIGURATION
# ============================================

# Sepolia Testnet RPC URL
SEPOLIA_RPC_URL=https://rpc.sepolia.org
# Alternative RPC providers:
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Mainnet RPC URL (for production deployment)
# MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ============================================
# WALLET CONFIGURATION
# ============================================

# Private key for contract deployment (without 0x prefix)
# ⚠️  SECURITY WARNING: Never commit this file with real keys!
PRIVATE_KEY=your_private_key_here

# Deployer address (for reference)
# DEPLOYER_ADDRESS=0x...

# ============================================
# API KEYS
# ============================================

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# CoinMarketCap API Key (for gas price in USD)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Codecov Token (for coverage reporting)
CODECOV_TOKEN=your_codecov_token_here

# ============================================
# CONTRACT CONFIGURATION
# ============================================

# Deployed contract address
CONTRACT_ADDRESS=

# Contract owner address
CONTRACT_OWNER=

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Enable/disable security features
ENABLE_PAUSE=true
ENABLE_ACCESS_CONTROL=true

# Pauser role addresses (comma-separated)
PAUSER_ADDRESSES=

# Admin addresses for emergency functions (comma-separated)
ADMIN_ADDRESSES=

# Maximum gas price (in gwei) for deployment
MAX_GAS_PRICE=50

# ============================================
# TESTING CONFIGURATION
# ============================================

# Enable gas reporting in tests
REPORT_GAS=false

# Network for testing (hardhat, localhost, sepolia)
TEST_NETWORK=hardhat

# Enable verbose test output
VERBOSE_TESTS=false

# ============================================
# PERFORMANCE OPTIMIZATION
# ============================================

# Solidity compiler optimizer runs
OPTIMIZER_RUNS=200

# Enable compiler optimizer
OPTIMIZER_ENABLED=true

# Enable via IR compilation (better optimization)
VIA_IR=true

# ============================================
# CI/CD CONFIGURATION
# ============================================

# GitHub Actions environment
CI=false

# Skip deployment verification (for testing)
SKIP_VERIFICATION=false

# Deployment timeout (in milliseconds)
DEPLOYMENT_TIMEOUT=120000

# ============================================
# MONITORING CONFIGURATION
# ============================================

# Enable monitoring and alerts
ENABLE_MONITORING=false

# Monitoring service API key
MONITORING_API_KEY=

# Alert email addresses (comma-separated)
ALERT_EMAILS=

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Frontend URL (for CORS configuration)
FRONTEND_URL=https://privacy-waste-rewards.vercel.app

# API endpoint URL
API_URL=

# WebSocket URL (for real-time updates)
WS_URL=

# ============================================
# FEATURE FLAGS
# ============================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable debug mode
DEBUG_MODE=false

# Enable detailed logging
VERBOSE_LOGGING=false

# ============================================
# RATE LIMITING
# ============================================

# Maximum submissions per user per day
MAX_SUBMISSIONS_PER_DAY=100

# Rate limit window (in seconds)
RATE_LIMIT_WINDOW=86400

# ============================================
# DoS PROTECTION
# ============================================

# Maximum gas limit for transactions
MAX_GAS_LIMIT=500000

# Maximum batch size for operations
MAX_BATCH_SIZE=50

# Minimum time between transactions (in seconds)
MIN_TX_INTERVAL=1

# ============================================
# DATA VALIDATION
# ============================================

# Maximum waste quantity per submission
MAX_WASTE_QUANTITY=100

# Minimum waste quantity per submission
MIN_WASTE_QUANTITY=1

# Valid waste categories (1-4)
VALID_WASTE_CATEGORIES=1,2,3,4

# ============================================
# NOTIFICATIONS
# ============================================

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ============================================
# BACKUP CONFIGURATION
# ============================================

# Backup RPC URLs (fallback)
BACKUP_RPC_URL_1=
BACKUP_RPC_URL_2=

# ============================================
# NOTES
# ============================================

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Keep private keys secure and never share them
# 4. Use different keys for testnet and mainnet
# 5. Rotate API keys regularly
# 6. Use environment-specific .env files (.env.development, .env.production)
